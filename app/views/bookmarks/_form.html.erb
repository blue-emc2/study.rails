<%= form_for @bookmark, :html => { :class => 'form-horizontal bookmarks-post-form' } do |f| %>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <%= f.number_field :user_id, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :url, :class => 'control-label' %>
    <%= f.text_field :url, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :created, :class => 'control-label' %>
    <%= f.datetime_select :created, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :time, :class => 'control-label' %>
    <%= f.text_field :time, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :keep_day, :class => 'control-label' %>
    <%= f.number_field :keep_day, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :notice_flag, :class => 'control-label' %>
    <%= f.check_box :notice_flag, :class => 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                bookmarks_path, :class => 'btn' %>
  </div>
<% end %>
